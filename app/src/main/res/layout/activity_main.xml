<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F3245"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="261dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColorHint="#D3D3D3"
            android:textColor="#C1E8FF"

            android:id="@+id/editTxtFirstName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintVertical_bias="0.201" android:hint="Voornaam"/>
    <EditText
            android:layout_width="261dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColorHint="#D3D3D3"
            android:textColor="#C1E8FF"
            android:id="@+id/editTxtSurName"
            app:layout_constraintTop_toBottomOf="@+id/editTxtFirstName"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintVertical_bias="0.033" android:hint="Achternaam"/>
    <EditText
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColorHint="#D3D3D3"
            android:textColor="#C1E8FF"
            android:id="@+id/editTxtEmail"
            app:layout_constraintTop_toBottomOf="@+id/editTxtSurName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.038" app:layout_constraintHorizontal_bias="0.52"
            android:hint="Email"/>
    <Button
            android:text="Registreer"
            android:layout_width="wrap_content"
            android:textColor="#C1E8FF"
            android:background="#A92255"
            android:layout_height="wrap_content" android:id="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtEmail" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.060000002" android:onClick="onRegisterButtonClick"/>
    <TextView
            android:text="Voornaam"
            android:layout_width="wrap_content"
            android:textColor="#C1E8FF"
            android:layout_height="wrap_content" android:id="@+id/txtFirstName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.060000002"/>
    <TextView
            android:text="Achternaam"
            android:layout_width="wrap_content"
            android:textColor="#C1E8FF"
            android:layout_height="wrap_content" android:id="@+id/txtLastName"
            app:layout_constraintTop_toBottomOf="@+id/txtFirstName"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.037"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:textColor="#C1E8FF"
            android:layout_height="wrap_content" android:id="@+id/txtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtLastName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.033"/>
    <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonHome"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.82"/>
</androidx.constraintlayout.widget.ConstraintLayout>